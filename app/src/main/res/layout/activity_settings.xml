<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karenlee.app.SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Reset all bpm."
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:id="@+id/resetLibraryButton"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:background="#1aeee3"
            android:typeface="sans"
            android:onClick="resetDatabase" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="View Music Library."
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:typeface="sans"
            android:id="@+id/viewLibraryButton"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:background="#f34067"
            android:onClick="viewLibrary"
            android:nestedScrollingEnabled="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Back."
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#1aeee3"
            android:id="@+id/etcButton"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:background="#ffffff"
            android:typeface="sans"
            android:onClick="bye" />

    </LinearLayout>

</RelativeLayout>
